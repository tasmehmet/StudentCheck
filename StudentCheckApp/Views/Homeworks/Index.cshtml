@model IEnumerable<StudentCheckApp.Models.DbModel.Homeworks>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Students.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Students.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Students.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @item.CreateTime.ToString("dd.MM.yyyy")
                </td>
            </tr>
        }
        <div>
            <a asp-action="ExportHomework" asp-controller="Excel">İndir</a> |
        </div>
    </tbody>
</table>
